{
	"version": 1,
	"disable_existing_loggers": false,
	"formatters": {
		"simple": { 
			"format": "%(asctime)s (%(name)s) [%(levelname)s] %(message)s"
		}
	},
	"handlers": {
		"file": {
			"class": "logging.FileHandler",
			"formatter": "simple",
			"filename": "logs/{current_datetime}.log"
		}
	},
	"loggers": {
		"__main__": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.app": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.detection.threshold_checker": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.detection.detector": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.detection.off_track_detector": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.detection.stopped_detector": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.detection.random_detector": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.drivers": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.generator": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.interactions.command_sender": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.interactions.mock_sender": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.interactions.iracing_window": {
			"level": "INFO",
			"handlers": [
				"file"
			]
		},
		"core.interactions.mock_window": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		},
		"core.procedures.wave_arounds": {
			"level": "DEBUG",
			"handlers": [
				"file"
			]
		}
	}
}